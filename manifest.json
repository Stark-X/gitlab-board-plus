{
  "manifest_version": 3,
  "name": "GitLab Board Plus",
  "version": "1.0.0",
  "description": "Enhance GitLab Issue Boards with advanced filtering and improved UX",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*/boards", "*://*/*/boards/*", "*://*/issues/boards", "*://*/issues/boards/*"],
      "js": ["src/content.js"],
      "css": ["src/styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "GitLab Board Plus",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["debug-boards.js"],
      "matches": ["*://*/*"]
    }
  ]
} 